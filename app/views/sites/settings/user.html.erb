<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">Settings</h4>
</div>

<%= render 'sites/settings/nav' %>

<div class="tab-content">
  <div class="tab-pane active">
    <%= simple_form_for(@site, url: settings_path, remote: true) do |f| %>
      <div class="modal-body">
        <%= f.fields_for(:owner) do |ff| %>
          <%= ff.input :email %>
          <a href="<%= new_password_reset_url(subdomain: 'www', email: current_user.email) %>" class="form-group-click-target">
            <%= ff.input :password, placeholder: '•••••••••••', disabled: true %>
          </a>
        <% end %>
      </div>
      <div class="modal-footer">
        <div class="pull-left">
          <%= link_to 'Log out', logout_url(subdomain: 'www'),
                method: 'delete',
                class: 'btn btn-default',
                tabindex: -1,
                data: { confirm: 'Are you sure you want to log out?' } %>

          <a href="<%= cancel_url(subdomain: 'www') %>" class="btn btn-danger-link">Cancel Account</a>
        </div>
        <%= f.button :submit, class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
