<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">Create a new site</h4>
</div>

<%= simple_form_for(@new_site, url: sites_path, remote: true) do |f| %>
  <div class="modal-body">
    <%= f.input :title %>
    <%= f.input :description, as: :text, input_html: { rows: 4 }, hint: '600 character limit' %>
    <%= f.input :color, label: 'Color', input_html: { data: { toggle: 'colorpicker' } } %>
  </div>
  <div class="modal-footer">
    <%= f.button :submit, value: 'Create site', class: 'btn btn-success' %>
  </div>
<% end %>
